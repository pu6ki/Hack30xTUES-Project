<% if submission.points == @contest.max_points %>
  <div class="card bg-success text-white font-weight-bold">
<% elsif submission.points > 0 && submission.points < @contest.max_points %>
  <div class="card bg-warning text-white font-weight-bold">
<% else %>
  <div class="card bg-danger text-white font-weight-bold">
<% end %>
  <span class="score">
    <span class="info">Submission <%= submission.id%></span>
    <br />
    Score: 
    <span><%= submission.points %> / <%= @contest.max_points %></span>
  </span>
  
  <%= link_to "View submission", [@contest, submission], class: 'btn btn-submission' %>
</div>