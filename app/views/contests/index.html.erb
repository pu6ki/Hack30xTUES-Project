<div class="col-md-8 offset-md-2 text-center wrapper">
  <% @contests.each do |c| %>
    <div class="card">
      <div class="card-title">
        <h3 class="heading"><%= c.title %></h3>

        <span class="text-muted">
          <%= truncate(c.description, length: 100) %>
        </span>
        <br>

        <span>
          Technology:
          <span class="font-weight-bold"><%= c.technology.name %>
        </span>
        <br />

        <span>
          Application deadline ends in:
          <span class="text-info"><%= distance_of_time_in_words(Time.now, c.deadline)%></span>
        </span>
      </div>
      <%= link_to "View contest info", c, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
