<div class="col-md-8 offset-md-2 text-center wrapper">
  <% @contests.each do |c| %>
    <div class="card">
      <div class="card-title">
        <h3 class="heading"><%= c.title %></h3>

        <span class="text-muted">
          <%= truncate(c.description, length: 100) %>
        </span>
        <br>

        <%= render 'contest_info', contest: c %>
      </div>
      <%= link_to "View contest info", c, class: 'btn btn-default' %>
    </div>
  <% end %>
</div>

<% if current_user.recruiter? %>
  <%= link_to "+", new_contest_path, class: 'btn btn-lg btn-default btn-add btn-circle' %>
<% end %>
