<%= form_for @contest do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :technology %>
  <%= f.select :technology_id, options_from_collection_for_select(current_user.userable.technologies, :id, :name), {}  %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.submit 'Create a contest' %>
<% end %>
