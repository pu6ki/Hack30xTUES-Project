<% recruiters.each do |recruiter| %>
  <div class="card">
    <div class="card-title">
      <h3 class="heading"><%= recruiter.company_name %></h3>

      <% unless recruiter.website.empty? %>
        <span class="text-muted">
          <i>Website: </i>
          <%= link_to recruiter.website, recruiter.website  %>
        </span>
      <% end %>
    </div>

    <%= link_to 'View recruiter info', recruiter, class: 'btn btn-default' %>
  </div>
<% end %>
